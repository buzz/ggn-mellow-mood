#bb_bold, #bb_und, #bb_ita, #bb_img, #bb_link, #bb_strk, #bb_h1, #bb_h2, #bb_h3, #bb_h4, #bb_h5, #bb_h6, #bb_color, #bb_tex, #bb_quote, #bb_list, #bb_spoil, #bb_cent, #bb_lef, #bb_righ, #bb_pre, #bb_youtube
  display: inline-block
  height: 16px
  width: 16px

span
  &.size1
    font-size: 0.75em
    line-height: 1em

  &.size2
    font-size: 1em
    line-height: 1em

h4
  font-size: 1em
  line-height: 1em

span.size3, h3
  font-size: 1.25em
  line-height: 1em

span.size4, h2
  font-size: 1.5em
  line-height: 1em

span
  &.size5
    font-size: 1.75em
    line-height: 1em

  &.size6
    font-size: 2em
    line-height: 1em

  &.size7
    font-size: 2.25em
    line-height: 1em

  &.size8
    font-size: 2.5em
    line-height: 1em

  &.size9
    font-size: 2.75em
    line-height: 1em

  &.size10
    font-size: 3em
    line-height: 1em

  &.size4
    iframe, .twitter_post, video, img
      float: left
      padding: 0px 15px 15px 0px !important
      box-shadow: none !important

  &.size5
    iframe, .twitter_post, video, img
      float: right
      padding: 0px 0px 15px 15px !important
      box-shadow: none !important

  &.size4 .twitter-tweet
    padding: 0px 15px 15px 0px !important

  &.size5 .twitter-tweet
    padding: 0px 0px 15px 15px !important

/* ../images, videos, twitter with size=4 code will float left, size=5 will float right */

