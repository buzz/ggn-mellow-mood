.bbbutt
  background-color: #EEEEEE
  border: medium solid #365C80
  padding: 5px
  margin: 5px auto
  list-style: none
  display: block
  cursor: default
  width: 550px

  li
    display: inline
    margin-right: 2px

    a
      border: none
      display: inline-block
      margin-bottom: -2px

    select
      background-color: var(--white)
      color: var(--black)
      padding: auto 0
      margin: 0
      height: auto

code
  background-color: var(--mediumBlue)
  padding: 1px 5px

blockquote code
  outline: 1px solid black
